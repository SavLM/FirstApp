<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/darker_gray"
	tools:context=".MainActivity" >
    <TextView
        android:layout_toLeftOf="@id/main_icon_view"
        android:layout_toStartOf="@id/main_icon_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon1_name"
        android:textSize="48sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/main_icon_view"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon2_name"
        android:textSize="48sp"
        android:textAlignment="center"/>

    <TextView
        android:layout_toRightOf="@id/main_icon_view"
        android:layout_toEndOf="@id/main_icon_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon3_name"
        android:textSize="48sp"
        android:textAlignment="center"/>

    <ImageView
        android:scaleType="fitCenter"
        android:layout_below="@id/main_icon_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/moon"
        android:contentDescription="@string/image_descr" />

</RelativeLayout>
